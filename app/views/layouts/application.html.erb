<!DOCTYPE html>
<html>
<head>
  <title>Personal income/expenses</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "public", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="l1">
    <div class="left">
        <table width="100%" height="64px">
          <tr>
            <td width="50%">
              <% if notice %>
                  <div class="alert success"><%= notice %></div>
              <% end %>
              <% if alert %>
                  <div class="alert error"><%= alert %></div>
              <% end %>
            </td>
            <td >
              <% if user_signed_in? %>
                  Logged in as <strong><%= current_user.email %></strong><br>
                  <%= link_to 'Edit profile', edit_user_registration_path %> |
                  <%= link_to "Logout", destroy_user_session_path, method: :delete  %>
              <% else %>
                  <%= link_to "Sign up", new_user_registration_path  %> |
                  <%= link_to "Login", new_user_session_path  %>
              <% end %>
            </td>
          </tr>
        </table>
    </div>
    <div class="line"></div>
    <div class="main_links">
        <%= link_to 'Home', {controller: "/welcome"}, class:"main_link" %>
        <% if user_signed_in? %>
            <%= link_to "My categories", {controller: "/categories"}, class:"main_link"  %>
            <%= link_to "Report", {controller: "/report"}, class:"main_link"  %>
        <% end%>
    </div>
    <div class="content center">
        <%= yield %>
    </div>
    <div class="rights">2013. All rights reserved.</div>
</div>
</body>
</html>
